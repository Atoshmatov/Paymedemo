<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    auth module style-->
    //language style

    <style name="language_text_style">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="language_text_mobil_style">
        <item name="android:layout_width">216dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="liner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.3dp</item>
        <item name="android:background">@color/liner_color</item>
    </style>


    <!--    auth module style-->
    //language style
</resources>
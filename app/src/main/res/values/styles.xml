<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    auth module style-->
    //language style

    <style name="language_text_style">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="liner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.3dp</item>
        <item name="android:background">@color/liner_color</item>
    </style>

    <style name="payme_logo_style">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
    </style>
    //language style

    //sign up screen

    <style name="inputText_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxBackgroundColor">@color/input_bg_color</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="signin_style">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/signup_button_style</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    //sign up screen

    //sign in screen

    <style name="wrong_password_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textColor">@color/wrong_password_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sign_in_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="forgot_password_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textColor">@color/text_color_green</item>
        <item name="android:textSize">16sp</item>
    </style>
    //sign in screen

    //pincode screen

    <style name="pincode_style">
        <item name="fontFamily">@font/amiko_semibold</item>
        <item name="android:elevation">6dp</item>
        <item name="android:background">@drawable/keybord_button_style</item>
        <item name="background">@color/input_bg_color</item>
        <item name="android:layout_width">80dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
    </style>

    //verify screen

    <style name="PinItem">
        <item name="fontFamily">@font/amiko_semibold</item>
        <item name="background">@color/input_bg_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
    </style>
    //verify screen
    <!--    auth module style-->


    <!--    Intro screen style-->
    //intro

    <style name="intro_image_style">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="intro_getStart_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/intro_style_bg</item>
        <item name="android:elevation">10dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="input_text_hint_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="fontFamily">@font/amiko_semibold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">14sp</item>
    </style>


    //intro
    <!--    Intro screen style-->



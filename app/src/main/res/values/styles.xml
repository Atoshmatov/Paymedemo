        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    //sign up screen

    //sign in screen
    <style name="wrong_password_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textColor">@color/wrong_password_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sign_in_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="forgot_password_style">

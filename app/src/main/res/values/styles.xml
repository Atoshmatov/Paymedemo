<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    auth module style-->
    //language style
    <style name="language_text_style">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="liner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.3dp</item>
        <item name="android:background">@color/liner_color</item>
    </style>
    <style name="payme_logo_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
    </style>
    //language style

    //sign up screen
    <style name="inputText_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="boxBackgroundColor">@color/signup_input__bg_color</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="signin_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">32dp</item>

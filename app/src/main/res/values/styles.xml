<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    auth module style-->
    //language style

    <style name="language_text_style">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="liner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.3dp</item>
        <item name="android:background">@color/liner_color</item>
    </style>

    <style name="payme_logo_style">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
    </style>
    //language style
    <!--    auth module style-->


    <!--    Intro screen style-->
    //intro

    <style name="intro_image_style">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="intro_getStart_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/intro_style_bg</item>
        <item name="android:elevation">10dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>
    </style>


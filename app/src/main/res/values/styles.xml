    <style name="pincode_text_style">
        <item name="fontFamily">@font/amiko_semibold</item>
        <item name="android:elevation">6dp</item>
        <item name="android:background">@drawable/keybord_button_style</item>
        <item name="background">@color/input_bg_color</item>
        <item name="android:layout_width">50dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

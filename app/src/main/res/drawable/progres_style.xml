<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"

    android:pivotX="50%"
    android:pivotY="50%"
    android:shape="oval"
    android:toDegrees="270">
    <shape
        android:shape="ring"
        android:useLevel="false">
        <gradient
            android:centerColor="@color/input_bg_color"
            android:centerY="0.5"
            android:endColor="@color/main_color"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>
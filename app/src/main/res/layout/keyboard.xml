<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,NewApi">

    <androidx.cardview.widget.CardView
        android:id="@+id/btOne"
        style="@style/pincode_style">

        <TextView
            style="@style/pincode_text_style2"
            android:text="1" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btTwo"
        style="@style/pincode_style">

        <TextView
            style="@style/pincode_text_style2"
            android:text="2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btThree"
        style="@style/pincode_style">

        <TextView
            style="@style/pincode_text_style2"
            android:text="3" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btFour"
        style="@style/pincode_style">

        <TextView
            style="@style/pincode_text_style2"
            android:text="4" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btFive"
        style="@style/pincode_style">

        <TextView
            style="@style/pincode_text_style2"
            android:text="5" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btSix"
        style="@style/pincode_style">

        <TextView
            style="@style/pincode_text_style2"
            android:text="6" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btSeven"
        style="@style/pincode_style">

        <TextView
            style="@style/pincode_text_style2"
            android:text="7" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btEight"
        style="@style/pincode_style">

        <TextView
            style="@style/pincode_text_style2"
            android:text="8" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btNine"
        style="@style/pincode_style"
        tools:ignore="MissingConstraints">

        <TextView
            style="@style/pincode_text_style2"
            android:text="9" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btClear"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="center"
        android:src="@drawable/ic_ingerprint"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btZero"
        style="@style/pincode_style">

        <TextView
            style="@style/pincode_text_style2"
            android:text="0" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btConfirm"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="20dp"
        android:src="@drawable/ic_backspace" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        app:constraint_referenced_ids="btOne,btTwo,btThree,btFour,btFive,btSix,btSeven,btEight, btNine, btClear,btZero,btConfirm"
        app:flow_horizontalGap="20dp"
        app:flow_maxElementsWrap="3"
        app:flow_verticalGap="20dp"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
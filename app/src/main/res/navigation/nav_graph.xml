<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/languageScreen"
        android:name="uz.gita.paymedemo.presentation.view.auth.screen.LanguageScreen"
        android:label="screen_language"
        tools:layout="@layout/screen_language">

        <action
            android:id="@+id/action_languageScreen_to_policeScreen"
            app:destination="@id/policeScreen"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/splashScreen"
        android:name="uz.gita.paymedemo.presentation.view.splash.screen.SplashScreen"
        android:label="screen_splash"
        tools:layout="@layout/screen_splash">

        <action
            android:id="@+id/action_splashScreen_to_introScreen"
            app:destination="@id/introScreen"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreen_to_signUPScreen"
            app:destination="@id/signUPScreen"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreen_to_pinCodeScreen"
            app:destination="@id/pinCodeScreen"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreen_to_signInScreen"
            app:destination="@id/signInScreen"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/signUPScreen"
        android:name="uz.gita.paymedemo.presentation.view.auth.screen.SignUPScreen"
        android:label="screen_signup"
        tools:layout="@layout/screen_signup" >
        <action
            android:id="@+id/action_signUPScreen_to_verifyScreen"
            app:destination="@id/verifyScreen" />
    </fragment>
    <fragment
        android:id="@+id/introScreen"
        android:name="uz.gita.paymedemo.presentation.view.auth.screen.IntroScreen"
        android:label="screen_intro"
        tools:layout="@layout/screen_intro">
        <action
            android:id="@+id/action_introScreen_to_languageScreen"
            app:destination="@id/languageScreen"
            app:popUpTo="@id/introScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/pinCodeScreen"
        android:name="uz.gita.paymedemo.presentation.view.auth.screen.PinCodeScreen"
        android:label="screen_pincode"
        tools:layout="@layout/screen_pincode">
        <action
            android:id="@+id/action_pinCodeScreen_to_mainScreen"
            app:destination="@id/mainScreen"
            app:popUpTo="@id/pinCodeScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signInScreen"
        android:name="uz.gita.paymedemo.presentation.view.auth.screen.SignInScreen"
        android:label="screen_signin"
        tools:layout="@layout/screen_signin">
        <action
            android:id="@+id/action_signInScreen_to_mainScreen"
            app:destination="@id/mainScreen"
            app:popUpTo="@id/signInScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/verifyScreen"
        android:name="uz.gita.paymedemo.presentation.view.auth.screen.VerifyScreen"
        android:label="screen_verify"
        tools:layout="@layout/screen_verify">

        <action
            android:id="@+id/action_verifyScreen_to_pinCodeScreen"
            app:destination="@id/pinCodeScreen"
            app:popUpTo="@id/verifyScreen"
            app:popUpToInclusive="true" />
        <argument
            android:name="number"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/mainScreen"
        android:name="uz.gita.paymedemo.presentation.view.main.screen.MainScreen"
        android:label="screen_main"
        tools:layout="@layout/screen_main" />
    <fragment
        android:id="@+id/policeScreen"
        android:name="uz.gita.paymedemo.presentation.view.auth.screen.PoliceScreen"
        android:label="screen_police"
        tools:layout="@layout/screen_police">
        <action
            android:id="@+id/action_policeScreen_to_signUPScreen"
            app:destination="@id/signUPScreen"
            app:popUpTo="@id/policeScreen"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>